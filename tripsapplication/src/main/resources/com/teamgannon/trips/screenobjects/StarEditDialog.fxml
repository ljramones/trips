                                        <Label text="pmdec" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                                        <TextField fx:id="pmdecLabel" GridPane.columnIndex="1" GridPane.rowIndex="12" />

                                        <Label text="Parallax" GridPane.columnIndex="0" GridPane.rowIndex="13" />
