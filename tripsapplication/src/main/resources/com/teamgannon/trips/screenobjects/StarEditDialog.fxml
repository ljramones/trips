                                <Label text="Milplan Type" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                                <TextField fx:id="milplanTextField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                                <ComboBox fx:id="milPlanComboBox" GridPane.columnIndex="2" GridPane.rowIndex="9" />

